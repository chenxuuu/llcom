<UserControl
    x:Class="LLCOM.Views.PacketDataView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LLCOM.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="using:LLCOM.ViewModels"
    d:DesignHeight="757"
    d:DesignWidth="762"
    x:DataType="vm:PacketDataViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:PacketDataViewModel />
    </Design.DataContext>
    <UserControl.Styles>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="0 0 0 5" />
        </Style>
        <Style Selector="ListBoxItem:pointerover">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="ListBoxItem:selected">
            <Setter Property="Background" Value="Transparent" />
        </Style>
    </UserControl.Styles>
    <Grid RowDefinitions="auto *">
        <ListBox
            Grid.Row="1"
            Margin="0,5"
            u:ScrollTo.ButtonTheme="{DynamicResource PrimaryScrollToButton}"
            u:ScrollTo.Direction="Bottom"
            ItemsSource="{Binding PacketData}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <controls:PacketDataControl
                        Margin="5,0,10,0"
                        Extra="{Binding Extra}"
                        Header="{Binding TagString}"
                        Hex="{Binding HexString}"
                        MainColor="{DynamicResource SemiGreen8}"
                        Text="{Binding String}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Border
            Grid.Row="0"
            Background="{DynamicResource SemiColorBackground2}"
            BorderBrush="{DynamicResource SemiColorBorder}"
            BorderThickness="0,0,0,1">
            <StackPanel
                Margin="5"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="5">
                <CheckBox VerticalAlignment="Center" Content="转义不可见字符" />
                <CheckBox
                    VerticalAlignment="Center"
                    Content="Hex模式"
                    IsThreeState="True" />
                <CheckBox VerticalAlignment="Center" Content="自动滚动" />
                <Button Content="清空数据" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
