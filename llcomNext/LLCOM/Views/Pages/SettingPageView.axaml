<UserControl
    x:Class="LLCOM.Views.SettingPageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="using:LLCOM.ViewModels"
    d:DesignHeight="800"
    d:DesignWidth="381"
    x:DataType="vm:SettingPageViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:SettingPageViewModel />
    </Design.DataContext>
    <TabControl>
        <TabItem Header="常规设置">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock Text="常规设置" />
                    <ToggleSwitch />
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="外观与字体" />
        <TabItem Header="日志与缓存" />
        <TabItem>
            <TabItem.Header>
                <Panel>
                    <TextBlock>关于软件</TextBlock>
                    <u:Badge
                        Margin="0,0,-8,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Classes="Danger"
                        Dot="True"
                        IsVisible="{Binding HasNewVersion}" />
                </Panel>
            </TabItem.Header>
            <ScrollViewer>
                <StackPanel Margin="10">
                    <Border
                        Width="170"
                        HorizontalAlignment="Center"
                        BorderBrush="{DynamicResource SemiColorBorder}"
                        BorderThickness="3"
                        CornerRadius="5">
                        <Svg Margin="10" Path="/Assets/Images/logo.svg" />
                    </Border>
                    <SelectableTextBlock
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        FontSize="25"
                        Text="LLCOM - Next" />
                    <SelectableTextBlock
                        HorizontalAlignment="Center"
                        FontSize="15"
                        Text="多功能调试工具" />

                    <Panel Margin="0,10,0,0" HorizontalAlignment="Center">
                        <u:Badge
                            Margin="0,-8,-20,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Classes="Danger"
                            Header="NEW"
                            IsVisible="{Binding HasNewVersion}" />
                        <Button Name="CheckUpdateButton" Command="{Binding CheckUpdateCommand}">
                            <Panel>
                                <TextBlock HorizontalAlignment="Center" IsVisible="{Binding !HasCheckedUpdate}">检查更新</TextBlock>
                                <TextBlock HorizontalAlignment="Center" IsVisible="{Binding NoNewVersion}">已是最新版本</TextBlock>
                                <TextBlock HorizontalAlignment="Center" IsVisible="{Binding HasNewVersion}">下载新版本</TextBlock>
                            </Panel>
                        </Button>
                        <ProgressBar
                            Width="30"
                            Height="30"
                            IsIndeterminate="True"
                            IsVisible="{Binding ElementName=CheckUpdateButton, Path=!IsEffectivelyEnabled}"
                            Maximum="100"
                            Minimum="0"
                            Theme="{DynamicResource ProgressRing}" />
                    </Panel>

                    <SelectableTextBlock Margin="0,20,0,0" TextWrapping="Wrap">
                        支持串口、网络、USB等调试工具与自动化脚本，提供一个简单易用的调试工具。
                    </SelectableTextBlock>
                    <SelectableTextBlock TextWrapping="Wrap">
                        软件支持跨平台，为各平台用户提供一致的体验。
                    </SelectableTextBlock>
                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                        <SelectableTextBlock Text="本软件为开源项目：" />
                        <HyperlinkButton
                            Height="20"
                            Classes="WithIcon Underline"
                            Content="GitHub源码仓库"
                            NavigateUri="https://github.com/chenxuuu/llcom/tree/next" />
                    </StackPanel>


                    <Button
                        Margin="0,20,0,0"
                        HorizontalAlignment="Stretch"
                        Command="{Binding CopySystemInfoCommand}"
                        Content="复制调试信息" />
                    <TextBox
                        Height="300"
                        Margin="0,5,0,0"
                        VerticalContentAlignment="Top"
                        AcceptsReturn="True"
                        FontSize="15"
                        IsReadOnly="True"
                        Text="{Binding SystemInfo}" />
                </StackPanel>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</UserControl>
